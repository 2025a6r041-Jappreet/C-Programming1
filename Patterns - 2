#include<stdio.h>
int main(){
    int N;
    printf("Enter Value of N : ");
    scanf("%d", &N);
    for(int i=1; i<=N; i++){
        for(int j=1; j<=i; j++){
            printf("* ");
        }
        for(int k=1; k<=(N-i) + (N-i-1); k++){
            printf("  ");
        }
        for(int l=1; l<=i; l++){
            if(l != N)
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
