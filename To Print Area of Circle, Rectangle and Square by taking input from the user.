// program to calculate the area of circle, rectangle and square by taking input from the user.
#include <stdio.h>
int main() {
  float ar, r;
  printf("Enter the radius of the circle: ");
  scanf("%f", &r);
  ar=3.14*r*r;
  printf("Area of the circle is: %f\n", ar);
  float ar1, l, w;
  printf("Enter the length and width of the rectangle: ");
  scanf("%f %f",&l, &w);
  ar1=l*w;
  printf("Area of the rectangle is: %f\n", ar1);
  float ar2, s;
  printf("Enter the side of the square: ");
  scanf("%f", &s);
  ar2=s*s;
  printf("area of the square is: %f", ar2);
  return 0;
}
