#include <stdio.h>
#include <string.h>

struct Student {
    int rollNumber;
    char name[50];
    int marks[3];
    int totalMarks;
};

int main() {
    int numStudents;

    printf("Enter the number of students: ");
    scanf("%d", &numStudents);
  
    struct Student s[numStudents];
    for (int i = 0; i < numStudents; i++) {
        printf("\nEnter details for Student %d:\n", i + 1);
        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollNumber);
        printf("Enter Name: ");
        scanf("%s", s[i].name);
        
        s[i].totalMarks = 0;
        printf("Enter marks for 3 subjects:\n");
        for (int j = 0; j < 3; j++) {
            printf("Subject %d Marks: ", j + 1);
            scanf("%d", &s[i].marks[j]);
            s[i].totalMarks += s[i].marks[j];
        }
    }
    for (int i = 0; i < numStudents; i++) {
        printf("\nStudent %d:\n", i + 1);
        printf("Roll Number: %d\n", s[i].rollNumber);
        printf("Name: %s\n", s[i].name);
        printf("Total Marks: %d\n",s[i].totalMarks);
    }

    return 0;
}

